<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="RadioButtonTestSuite" verbose="1">

    <test name="YesRadioButtonTest">
        <parameter name="selection" value="Yes"></parameter>
        <classes>
            <class name="com.demoqa.tests.elementspagetests.subsectionstests.RadioButtonTests">
                <methods>
                    <include name="selectOption"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="ImpressiveRadioButtonTest">
        <parameter name="selection" value="Impressive"></parameter>
        <classes>
            <class name="com.demoqa.tests.elementspagetests.subsectionstests.RadioButtonTests">
                <methods>
                    <include name="selectOption"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="NoOptionRadioButtonTest">
        <classes>
            <class name="com.demoqa.tests.elementspagetests.subsectionstests.RadioButtonTests">
                <methods>
                    <include name="shouldNotBeAbleToSelectNo"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>